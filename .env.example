# Eva Voice Assistant - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Deepgram - Speech-to-Text
# Get free $200 credits at https://deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Groq - LLM (Ultra-fast inference)
# Get free API key at https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# ElevenLabs - Text-to-Speech (Premium quality)
# Get API key at https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# OPTIONAL (Legacy - not needed for Eva)
# =============================================================================

# OpenAI - Only needed if using RAG features
OPENAI_API_KEY=your_openai_api_key_here

# Cartesia - Alternative TTS (not used by default)
CARTESIA_API_KEY=your_cartesia_api_key_here

# Daily.co - Only needed for Pipecat agent mode
DAILY_API_KEY=your_daily_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
